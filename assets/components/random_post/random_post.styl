@import '~application.styl';

random-post-controller {
  text-align: center;
  .messages-wrapper {
    margin-top: 6em;
    transition: margin-top 1s ease;
  }
  .primary-message {
    color: $color-black;
    text-transform: uppercase;
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 700;
    font-size: 0.9em;
    letter-spacing: 1px;
    word-spacing: 1px;
    line-height: 1.3em;
    max-width: 25em;
    display: inline-block;
  }
  .secondary-message-wrapper {
    margin-top: 1em
  }
  .secondary-message {
    color: $color-gray;
    font-weight: 300;
    font-size: 0.75em;
    max-width: 20em;
    display: inline-block;
  }
  .post-block-wrapper {
    margin-top: 3em;
    position: relative;
    transition: margin-top 1s ease;
  }
  .preloader-row {
    margin-top: 3em;
    text-align: center;
  }
  .post-row {
    position: absolute;
    background: $color-black;
    top: 0;
    transform: translateY(100%);
    transition: transform 1s ease;
  }
  .next-button {
    position: fixed;
    top: 20em;
    right: 3em;
    text-transform: uppercase;
    font-family: "Roboto Condenced", sans-serif;
    font-weight: 700;
    font-size: 0.7em;
    color: #837b7b;
    opacity: 0;
    cursor: pointer;
    span {
      opacity: 0.3;
      transition: opacity 0.2s ease-in;
      &:hover {
        opacity: 1;
      }
    }
  }

  &.with-post {
    .button-row {
      opacity: 0;
      transition: opacity 1s ease;
    }
    .messages-wrapper {
      margin-top: 1em;
      transition: margin-top 1s ease;
    }
    .post-block-wrapper {
      margin-top: 1em;
      transition: margin-top 1s ease;
    }
    .post-row {
      transform: translateY(0);
      transition: transform 1s ease;
    }
    .next-button {
      opacity: 1;
      transition: opacity 1s;
      transition-delay: 1s;
    }
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 0.3
    }
  }
}
