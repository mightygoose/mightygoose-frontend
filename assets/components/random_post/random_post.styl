@import '~application.styl';

random-post-controller {
  text-align: center;
  .messages-wrapper {
    margin-top: 6em;
    transition: margin-top 1s ease;
  }
  .primary-message {
    color: $color-black;
    text-transform: uppercase;
    {bold-text}
    font-size: 0.9em;
    letter-spacing: 1px;
    word-spacing: 1px;
    line-height: 1.3em;
    max-width: 25em;
    display: inline-block;
  }
  .secondary-message-wrapper {
    margin-top: 1em
  }
  .secondary-message {
    color: $color-gray;
    font-weight: 300;
    font-size: 0.75em;
    max-width: 20em;
    display: inline-block;
  }
  .post-block-wrapper {
    margin-top: 3em;
    position: relative;
    transition: margin-top 1s ease;
  }
  .preloader-row {
    margin-top: 3em;
    text-align: center;
  }
  .post-row {
    position: absolute;
    background: $color-black;
    top: 0;
    transform: translateY(100%);
    transition: transform 1s ease;
    display: table;
  }
  .posts-container {
    display: table-cell;
    width: 80%;
  }
  .next-button, .prev-button {
    {bold-text}
    display: table-cell;
    width: 10%;
    text-transform: uppercase;
    font-size: 0.7em;
    color: #837b7b;
    opacity: 0;
    cursor: pointer;
    position: relative;
    background-color: $color-black;
    transition: background-color 0.2s ease-in;
    &:hover {
      background-color: $color-black-secondary;
      span {
        opacity: 1;
      }
    }
    span {
      opacity: 0.3;
      transition: opacity 0.2s ease-in;
      display: none;
      position: absolute;
      width: 100%;
      top: 15em;
    }
  }

  &.with-post {
    .button-row {
      opacity: 0;
      transition: opacity 1s ease;
    }
    .messages-wrapper {
      margin-top: 1em;
      transition: margin-top 1s ease;
    }
    .post-block-wrapper {
      margin-top: 1em;
      transition: margin-top 1s ease;
    }
    .post-row {
      transform: translateY(0);
      transition: transform 1s ease;
    }
    .next-button, .prev-button {
      animation: fade-in 1s ease-in forwards;
      animation-delay: 1s;
      span {
        display: block;
      }
    }
  }
  @media (max-width: $breakpoints.$tablet) {
    .next-button, .prev-button {
      display: none;
    }
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
}
