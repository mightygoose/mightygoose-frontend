search-controller {

  * {
    box-sizing: border-box; //should be applied globally
  }

  .params-row, .preloader-row, .search-button-row {
    text-align: center;
  }

  .search-form {
    display: inline-block;
    width: 100%;
  }

  .with-margin {
    margin-bottom: 1em;
  }

  .row {
    display: inline-block;
  }

  .params-row, .results-row {
    padding: 0 1%;
  }

  .ceil {
    display: inline-block;
    float: left;
    width: 50%;
    padding: 0 0.5em;
  }

  .code-ceil {
    width: 40%;
  }

  .year-ceil {
    width: 20%;
  }

  input {
    border-radius: 3px;
    height: 2.5em;
    border: 3px solid #f2f2f2;
    box-shadow: none;
    width: 100%;
    font-size: 1em;
    padding: 0.3em 1em;
    display: block;
    width: 100%;
  }

  .search-button-row {
    display: inline-block;
  }


  @media (max-width: 768px) {
    //.code-ceil {
      //width: 50%;
    //}

    //.release-title-ceil, .artist-ceil, .year-ceil {
      //width: 100%;
    //}

    .ceil {
      width: 100%;
    }

    .release-title-ceil, .year-ceil, .catno-ceil {
      margin-top: 1em;
    }
  }
}


[refs="result"] {
  .result-image, .result-info {
    display: inline-block;
    float: left;
  }

  .result-image {
    width: 30%;
    img {
      width: 100%;
    }
  }

  .result-info {
    padding-left: 1em;
    width: 70%;
  }

  .result-title {
    font-family: "Roboto Condensed", sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 1em;
    color: #333;
  }

  .tags-row {
    margin: 0.5em 0;
  }

  .result-tag {
    display: inline-block;
    padding: 0.4em 0.8em;
    font-size: 0.5em;
    background: #f2f2f2;
    color: #837b7b;
    border-radius: 2px;
  }
}
