search-controller {

  * {
    box-sizing: border-box; //should be applied globally
  }

  .params-row, .preloader-row, .search-button-row {
    text-align: center;
  }

  .search-form {
    display: inline-block;
    width: 100%;
  }

  .with-margin {
    margin-bottom: 1em;
  }

  .row {
    display: inline-block;
  }

  .params-row, .results-row {
    padding: 0 1%;
  }

  .ceil {
    display: inline-block;
    float: left;
    width: 50%;
    padding: 0 0.5em;
  }

  .code-ceil {
    width: 40%;
  }

  .year-ceil {
    width: 20%;
  }

  input {
    border-radius: 3px;
    height: 2.5em;
    border: 3px solid #f2f2f2;
    box-shadow: none;
    width: 100%;
    font-size: 1em;
    padding: 0.3em 1em;
    display: block;
    width: 100%;
  }

  .search-button-row {
    display: inline-block;
  }

  .no-results {
    color: #2f2f2f;
    text-transform: uppercase;
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 700;
    font-size: 0.9em;
    letter-spacing: 1px;
    display: inline-block;
    padding: 0.7em 2.5em;
    border-radius: 3px;
    cursor: pointer;
    border: none;
    width: 100%;
    text-align: center;
  }


  @media (max-width: 768px) {

    .ceil {
      width: 100%;
    }

    .release-title-ceil, .year-ceil, .catno-ceil {
      margin-top: 1em;
    }
  }
}


[refs="result"] {
  margin-bottom: 1em;
  padding-bottom: 1em;


  &:first-child {
    padding-top: 1em;
    border-top: 1px solid #f2f2f2;
  }

  &:not(:last-child) {
    border-bottom: 1px solid #f2f2f2;
  }

  .result-image, .result-info, .result-additional {
    display: inline-block;
    float: left;
  }

  .result-image {
    width: 30%;
    img {
      width: 100%;
    }
  }

  .result-info, .result-additional {
    padding-left: 1em;
    width: 70%;
  }

  .result-title {
    font-family: "Roboto Condensed", sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 1em;
    color: #333;
  }

  .tags-row {
  }

  .result-tag {
    display: inline-block;
    padding: 0.4em 0.8em;
    font-size: 0.5em;
    background: #f2f2f2;
    color: #837b7b;
    border-radius: 2px;
    margin: 0.5em 0 0;
  }

  .result-item {
    margin-top: 0.5em;
    float: left;
    margin-right: 2em;
  }

  .item-category-title {
    display: inline-block;
    font-size: 0.5em;
    color: #837b7b;
    border-radius: 2px;
  }

  .info-button-row {
    margin-top: 2em;
  }

  @media (max-width: 768px) {

    .info-button-row {
      padding: 0 2em;
    }

    .button {
      width: 100%;
      text-align: center;
    }

    .result-additional {
      width: 100%;
      padding-left: 0;
    }

    .item-category-title {
      width: 100%;
    }
  }

}

[ref="release"] {

  .release-gallery {
    float: left;
    width: 30%;
    img {
      width: 100%;
    }
  }

  .release-info {
    float: left;
    width: 70%;
    padding-left: 1em;
  }

  .release-title {
    font-family: "Roboto Condensed", sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 1em;
    color: #333;
  }

  .tags-row {
    margin-bottom: 1em;
    margin-top: 0.5em;
  }

  .release-tag {
    display: inline-block;
    padding: 0.4em 0.8em;
    font-size: 0.5em;
    background: #f2f2f2;
    color: #837b7b;
    border-radius: 2px;
    margin: 0.5em 0 0;
  }

  .item-category-title {
    display: inline-block;
    font-size: 0.5em;
    color: #837b7b;
    border-radius: 2px;
  }

  .minor-info-row {
    font-size: 0.8em;
    margin-top: 1em;
  }

  .discogs-link-row {
    margin-top: 1em;
  }

  @media (max-width: 768px) {
    .release-gallery {
      width: 100%;
    }

    .release-info {
      width: 100%;
      padding: 0.8em 0.3em;
    }

    .discogs-link-row {
      text-align: center;
    }
  }
}
