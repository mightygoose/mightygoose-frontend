@import '~application.styl';

track-list {
  .icon-discogs_logo {
    display: block;
    color: $color-gray-track-label;
  }
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: inline-table;
    border-collapse: separate;
    border-spacing: 0 0.7em;
  }
  .track-list-track {
    font-size: 0.7em;
    display: table-row;
  }
  .position, .artist, .title, .separator {
    display: table-cell;
  }
  .position, .title {
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 700;
  }
  .position {
    color: $color-gray-track-digit;
    text-transform: uppercase;
    width: 2em;
  }
  .artist {
    color: $color-gray-track-label;
    white-space: nowrap;
  }
  .separator {
    padding: 0 0.5em;
    color: #666;
  }
  .title {
    color: $color-gray-track-label;
  }
}
