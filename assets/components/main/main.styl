@import '~application.styl';

body {
    font-family: 'Roboto', sans-serif;
    font-weight: 400;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-size: 20px;
}

a {
  text-decoration: none;
}

/* critical part */
#top_bar {
  height: 3em;
  background: $color-black;
  .top-bar-section {
    height: 100%;
    padding: 0 5%;
  }
  .menu-items-list {
    margin: 0;
    padding: 0;
    height: 100%;
    list-style: none;
    li {
      display: inline-block;
      height: 100%;
      float: left;
      margin: 0 1.5em;
    }
    .left {
      float: left;
    }
    .right {
      float: right;
    }
  }
  .top-bar-link {
    height: 100%;
    display: inline-block;
  }
  .top-bar-logo-link {
    width: 100%;
    color: $color-black;
    background: $color-yellow-primary;
    text-align: center;
  }
  #logo {
    width: 3em;
  }
  .icon-logo {
    font-size: 1.8em;
    line-height: 1.8em;
  }
  .menu-item-label {
    color: $color-white-primary;
    font-size: 0.7em;
    text-transform: uppercase;
    line-height: 4.3em;
    display: inline-block;
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 700;
    letter-spacing: 1px;
    word-spacing: 1px;
  }
  .menu-link {
    padding: 0 0.1em;
    box-sizing: border-box;
    border-bottom: 0px solid $color-yellow-primary;
    transition: border-width 0.1s ease;
  }
  .active-menu-item .menu-link, .menu-link:not(.no-hover):hover {
    border-bottom: 5px solid $color-yellow-primary;
    box-sizing: border-box;
  }
}
/* / critical part */

.row {
  width: 100%;
  display: block;
}

.button {
  color: $color-black;
  background: $color-yellow-primary;
  text-transform: uppercase;
  font-family: 'Roboto Condensed', sans-serif;
  font-weight: 700;
  font-size: 0.9em;
  letter-spacing: 1px;
  display: inline-block;
  padding: 0.7em 2.5em;
  border-radius: 3px;
  &:hover {
    background: $color-yellow-secondary;
  }
}

@media (max-width: $breakpoints.$mobile-large) {
  #login {
    display: none !important;
  }
}



.controller-highlighted, .component-highlighted {
    display: block;
    padding-bottom: 10px;
    padding-left: 1px;
}
.controller-highlighted:after, .component-highlighted:after {
    font-size: 10px;
    position: relative;
    left: 0;
    bottom: 0;
}
.controller-highlighted:after {
    content: 'Controller';
}
.component-highlighted:after {
    content: 'Component';
}
.controller-highlighted {
    border: 1px solid red;
}
.component-highlighted {
    border: 1px solid blue;
}

.main-container {
    margin-top: 20px;
}
